<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.mikhaellopez.circularprogressbar"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView

        android:id="@+id/cvList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="30"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/cpGrid"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cpb_progress="5"
                    app:cpb_background_color="@color/white"
                    app:cpb_background_progressbar_color="@color/white"
                    app:cpb_background_progressbar_width="3dp"
                    app:cpb_progressbar_color="@color/white"
                    app:cpb_progressbar_width="10dp" />

                <TextView
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69%"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="25sp"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="70"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harry Potter and The Order of Phoenix"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_marginTop="3dp"
                    android:text="2006"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>


            </RelativeLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>